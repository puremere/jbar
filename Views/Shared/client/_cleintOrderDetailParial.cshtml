                <p>@Model.pricePerKiloometre</p>
            </div>
        </div>
        <p class="descRow secTitle">ناوگان</p>
        @{
            string typ = "";
            if (Model.typeOrderList != null)
            {
                foreach (var item in @Model.typeOrderList)
                {
                    typ = item.title + " - ";
                }
            }

        }
        <p class="descRow">@typ</p>
