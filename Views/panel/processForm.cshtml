@model jbar.ViewModel.processFormActionVM
@{
    ViewBag.Title = "processForm";
    Layout = "~/Views/Shared/_panelLayout.cshtml";
}














<div class="">
    <div class="border">
        <div class="bg-gray-300 nav-bg" style="border-radius:6px; margin:0 30px">
            <nav class="nav nav-tabs">
                <a class="nav-link active" data-bs-toggle="tab" href="#tabCont1">لیست فرمول ها </a>
                <a class="nav-link " data-bs-toggle="tab" href="#tabCont2"> افزودن فرمول جدید </a>

            </nav>
        </div>
        <div class="card-body tab-content">
            <div class="tab-pane active show" id="tabCont1">
                <div class="col-lg-12">
                    <div class="card custom-card">
                        <div class="card-body">
                            <div>
                                <h6 class="main-content-label mb-1">جدول فرم های مرتبط </h6>
                                <p class="text-muted card-sub-title"></p>
                            </div>
                            <div class="table-responsive border">
                                <table class="table text-nowrap text-md-nowrap table-hover mg-b-0">
                                    <thead>
                                        <tr>


                                            <th>نام فرم</th>
                                            <th>اقدامات</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.processFormList != null)
                                        {
                                            foreach (var item in Model.processFormList)
                                            {
                                                
                                                <tr>
                                                    <td>@item.title</td>


                                                    <td style="display:flex">
                                                        <button id="@item.processFormID" type="button" class="btn ripple btn-primary btn-sm">حذف </button>

                                                    </td>
                                                </tr>
                                            }
                                        }



                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane " id="tabCont2">
                <div class="row row-sm">
                    <div class="col-xl-12 col-lg-12 col-md-12">
                        <div class="card custom-card">
                            <div class="card-body">

                                <form action="setNewFormProcess" method="post">
                                    <input hidden name="processID" value="@Model.process.processID" />
                                    <div class="row row-sm mg-b-20">

                                        <div class="col-lg-3 form-group">
                                            <h6 style="margin-bottom:15px" class="main-content-label mb-1"> انتخاب فرم</h6>

                                            <select name="formID" class="form-control select2">



                                                @if (Model.allForm != null)
                                                {
                                                    foreach (var item in Model.allForm)
                                                    {

                                                        <option value="@item.processFormID">@Html.Raw(item.title)</option>
                                                    }
                                                }
                                            </select>
                                        </div>


                                    </div>
                                    <button class="btn ripple btn-main-primary btn-block">ارسال</button>
                                </form>



                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

